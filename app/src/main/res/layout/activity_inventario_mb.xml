<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Vista.Administrador.GestionHabitaciones.InventarioMB">

    <LinearLayout
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <com.google.android.material.appbar.MaterialToolbar
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/azulPalido">

                <Button
                    android:id="@+id/btnRegresarMB"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:drawableLeft="@drawable/ic_icono_regresar"
                    android:drawableTint="@color/azulOscuro"
                    app:rippleColor="@color/azulClaro" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Inventario HabitaciÃ³n"
                    android:textSize="20sp"
                    android:textColor="@color/azulOscuro"
                    />
            </com.google.android.material.appbar.MaterialToolbar>


        </com.google.android.material.appbar.AppBarLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="23sp"
            android:textStyle="bold"
            android:textColor="@color/azulOscuro"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="Inventario Mini-Bar" />

        <TextView
            android:id="@+id/tvHabitacionMB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:text="TextView" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/grisFondo" />

        <FrameLayout
            android:id="@+id/flContenedorProductos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvListaInventarioMB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </FrameLayout>

    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAgregarProductoMB"
        style="@style/Widget.Material3.FloatingActionButton.Surface"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/amarillo"
        app:rippleColor="@color/azulPalido"
        app:pressedTranslationZ="0dp"
        app:fabSize="normal"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="5dp"
        app:layout_constraintBottom_toTopOf="@id/btnProcesarMB"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_icono_agregar"
        app:tint="@color/azulOscuro"/>



    <TextView
        android:id="@+id/tvComentarioMB"
        app:layout_constraintRight_toLeftOf="@id/fabAgregarProductoMB"
        app:layout_constraintBottom_toTopOf="@id/btnProcesarMB"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/grisFondo"
        android:text="(Agrega productos)"
        />

    <Button
        android:id="@+id/btnProcesarMB"
        style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:backgroundTint="@color/azulOscuro"
        android:text="Procesar Inventario"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:rippleColor="@color/azulClaro" />



</androidx.constraintlayout.widget.ConstraintLayout>
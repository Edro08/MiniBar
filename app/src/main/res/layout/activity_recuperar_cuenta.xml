<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.purosurf.minibar.Vista.InicioSesion.RecuperarCuenta">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvIndicacionRecuperarCuenta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:text="Ingresa tu correo electronico"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilCorreoRC"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:hint="Correo"
            app:boxStrokeColor="@color/azul"
            app:hintTextColor="@color/azul">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtCorreoRecuperarCuenta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_icono_email"
                android:drawablePadding="7dp"
                android:drawableTint="@color/azul"
                android:inputType="textWebEmailAddress"
                android:textColor="@color/azulOscuro"
                android:textSize="18sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btnReestablecerRecuperarCuenta"
            style="@style/Widget.Material3.Button"
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:backgroundTint="@color/azul"
            app:rippleColor="@color/azulVerde"
            android:text="Reestablecer ContraseÃ±a"
            android:textSize="18sp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
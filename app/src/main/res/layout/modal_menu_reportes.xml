<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constraintModal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/memuModalReportes"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/azulOscuro"
                android:textSize="18sp"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:text="Seleccione el tipo de reporte" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cvReporteConsumos"
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_margin="15dp"
                android:animateLayoutChanges="true"
                app:rippleColor="@color/azulPalido"
                android:backgroundTint="@color/amarillo"
                app:cardCornerRadius="20dp"
                app:cardElevation="1dp"
                app:contentPadding="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginRight="10dp"
                        app:srcCompat="@drawable/ic_icono_reporte_consumo"
                        app:tint="@color/azulOscuro" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Reporte de consumo"
                        android:textColor="@color/azulOscuro"
                        android:textSize="22sp" />
                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cvReporteCompras"
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_margin="15dp"
                android:animateLayoutChanges="true"
                app:rippleColor="@color/azulPalido"
                android:backgroundTint="@color/amarillo"
                app:cardCornerRadius="20dp"
                app:cardElevation="1dp"
                app:contentPadding="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginRight="10dp"
                        app:srcCompat="@drawable/ic_icono_reporte_compras"
                        app:tint="@color/azulOscuro" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Reporte de Compras"
                        android:textColor="@color/azulOscuro"
                        android:textSize="22sp" />
                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cvReporteEdicion"
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_margin="15dp"
                android:animateLayoutChanges="true"
                app:rippleColor="@color/azulPalido"
                android:backgroundTint="@color/amarillo"
                app:cardCornerRadius="20dp"
                app:cardElevation="1dp"
                app:contentPadding="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginRight="10dp"
                        app:srcCompat="@drawable/ic_icono_reporte_existencias"
                        app:tint="@color/azulOscuro" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Reporte de Inventario"
                        android:textColor="@color/azulOscuro"
                        android:textSize="22sp" />
                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>